<div class="container my-5 d-flex justify-content-center">
  <div class="card shadow-lg" style="max-width: 800px; border: none;">
    <div class="card-body p-5 bg-light">
      <h3 class="text-center mb-4 fw-bold">Submit a New Order</h3>
      <%= form_for @order do |f| %>
        <div class="mb-4">
          <%= f.label :title, class: "form-label fw-semibold" %>
          <%= f.text_field :title, required: true, class: "form-control", placeholder: "Enter the title of your order" %>
        </div>

        <div class="mb-4">
          <%= f.label :description, class: "form-label fw-semibold" %>
          <%= f.text_area :description, required: true, class: "form-control", rows: 5, placeholder: "Provide a detailed description" %>
        </div>

        <div class="mb-4">
          <%= f.label :deadline, class: "form-label fw-semibold" %>
          <%= f.date_field :deadline, required: true, class: "form-control", placeholder: "Choose a deadline date" %>
        </div>

        <div class="mb-4">
          <%= f.label :file, class: "form-label fw-semibold" %>
          <%= f.file_field :file, required: true, accept: 'text/plain,application/msworld,application/vnd.openxmlformats-officedocument.wordprocessingml.document', class: "form-control" %>
        </div>

        <div class="d-grid mt-4">
          <%= f.submit "Submit Order", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>