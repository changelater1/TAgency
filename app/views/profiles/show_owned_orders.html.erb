<div class="container mt-5">
  <h1 class="text-center">My Orders</h1>

  <% if @owned_orders.any? %>
    <div class="table-responsive mt-4">
      <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @owned_orders.each do |order| %>
            <tr>
              <td><%= link_to order.id, order_path(order), class: 'text-decoration-none' %></td>
              <td><%= order.title %></td>
              <td><%= order.status %></td>
              <td><%= truncate(order.description, length: 50) %></td>
              <td><%= order.deadline.strftime('%Y-%m-%d %H:%M') if order.deadline %></td>
              <td>
                <%
=begin%>
 <%= link_to 'View', order_path(order), class: 'btn btn-primary btn-sm' %> 
<%
=end%>
                <%# Если требуется редактирование заказов пользователем, добавьте кнопку Edit %>
                <%# link_to 'Edit', edit_order_path(order), class: 'btn btn-warning btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      You have no orders yet.
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to Profile', my_profile_path(@user), class: 'btn btn-secondary' %>
  </div>
</div>